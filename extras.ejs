	<script src="https://kit.fontawesome.com/79803c7868.js" crossorigin="anonymous"></script>

	<script type="text/javascript">
		$('li').click(function() {
			$(this).find('table').toggleClass('show')
			$(this).find('h2').toggleClass('select')
		})
	</script>
</body>
	
	
</html>